{
  "version": 3,
  "configurePresets": [
    {
      "name": "arm-cortex-m7",
      "displayName": "ARM Cortex-M7 (cross)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/arm",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/src/cmake/arm-eabi-none-gcc.cmake",
        "CMAKE_BUILD_TYPE": "Debug",
        "ARM_BUILD": "ON"
      }
    },
    {
      "name": "native-mingw",
      "displayName": "Native MinGW",
      "generator": "MinGW Makefiles",
      "binaryDir": "${sourceDir}/build/mingw",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "ENABLE_COVERAGE": "ON"
      }
    },
    {
      "name": "native-x86_64-Ninja",
      "displayName": "Native x86_64-NINJA",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/x86_64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "native-x86_64-Ninja-Tests",
      "displayName": "Native x86_64-NINJA-TESTS",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/x86_64/tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "build-arm",
      "configurePreset": "arm-cortex-m7",
      "jobs": 8
    },
    {
      "name": "build-mingw",
      "configurePreset": "native-mingw",
      "jobs": 8
    },
    {
      "name": "build-x86_64-NINJA",
      "configurePreset": "native-x86_64-Ninja",
      "jobs": 8
    },
    {
      "name": "build-x86_64-NINJA-TESTS",
      "configurePreset": "native-x86_64-Ninja-Tests",
      "jobs": 8
    }
  ]
}
